<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>
		zip
	</id>
	<includeBaseDirectory>
		false
	</includeBaseDirectory>
	<formats>
		<format>
			zip
		</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>
				${project.basedir}/lib
			</directory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>
				${project.build.directory}/${project.artifactId}-${project.version}.jar
			</source>
			<outputDirectory>
				/lib
			</outputDirectory>
		</file>
		<file>
			<source>
				${project.basedir}/catalog_utils.properties
			</source>
			<outputDirectory>
				/
			</outputDirectory>
		</file>
		<file>
			<source>
				${project.basedir}/ModelLinker.md
			</source>
			<outputDirectory>
				/
			</outputDirectory>
		</file>
		<file>
			<source>
				${project.basedir}/modelLinker.cmd
			</source>
			<outputDirectory>
				/
			</outputDirectory>
			<fileMode>
				0755
			</fileMode>
		</file>
		<file>
			<source>
				${project.basedir}/modelLinker.sh
			</source>
			<outputDirectory>
				/
			</outputDirectory>
			<fileMode>
				0755
			</fileMode>
		</file>
		<file>
			<source>
				${project.basedir}/columnLineageSummary.sh
			</source>
			<outputDirectory>
				/
			</outputDirectory>
			<fileMode>
				0755
			</fileMode>
		</file>
		<file>
			<source>
				${project.basedir}/columnLineageSummary.cmd
			</source>
			<outputDirectory>
				/
			</outputDirectory>
			<fileMode>
				0755
			</fileMode>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>
				lib
			</outputDirectory>
			<excludes>
				<exclude>
					${project.groupId}:${project.artifactId}:jar:*
				</exclude>
				<!-- <exclude>EDC-Rest-Client-10.5.0.1.jar</exclude> -->
			</excludes>
			<!-- <destName>${project.groupId}.zip</destName> -->
		</dependencySet>
	</dependencySets>
</assembly>
